{
  "extends": ["@tsconfig/react-native/tsconfig.json"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "paths": {
      "react-native-skeleton": ["../src/index"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@constants": ["src/constants"],
      "@hooks": ["src/hooks"],
      "@navigation": ["src/navigation"],
      "@screens": ["src/screens"]
    }
  }
}
